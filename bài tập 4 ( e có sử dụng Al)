<!DOCTYPE html>
<html>
<head>
    <title>Bài Tập 04 - Form</title>
</head>
<body>
    <h2>Đăng ký thành viên</h2>

    <!-- Bắt đầu Form -->
    <form>
        <!-- Nhập Họ tên -->
        <label for="name">Họ và tên:</label><br>
        <input type="text" id="name" name="name"><br><br>

        <!-- Nhập Email -->
        <label for="email">Email:</label><br>
        <input type="email" id="email" name="email"><br><br>

        <!-- Nhập mật khẩu -->
        <label for="password">Mật khẩu:</label><br>
        <input type="password" id="password" name="password"><br><br>

        <!-- Chọn giới tính -->
        <label>Giới tính:</label><br>
        <input type="radio" id="male" name="gender" value="Nam">
        <label for="male">Nam</label><br>
        <input type="radio" id="female" name="gender" value="Nữ">
        <label for="female">Nữ</label><br><br>

        <!-- Sở thích -->
        <label>Sở thích:</label><br>
        <input type="checkbox" id="sport" name="hobby" value="Thể thao">
        <label for="sport">Thể thao</label><br>
        <input type="checkbox" id="music" name="hobby" value="Âm nhạc">
        <label for="music">Âm nhạc</label><br>
        <input type="checkbox" id="travel" name="hobby" value="Du lịch">
        <label for="travel">Du lịch</label><br><br>

        <!-- Nút gửi -->
        <input type="submit" value="Đăng ký">
        <input type="reset" value="Làm lại">
    </form>
</body>
</html>
